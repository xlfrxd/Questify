<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="bottomNavigationStyle">@style/CustomBottomNavigationStyle</item>
    </style>

    <!-- Custom BottomNavigationView style -->
    <style name="CustomBottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">32dp</item> <!-- Adjust the icon size as needed -->
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconTint">@color/nav_item_color</item>
        <item name="backgroundTint">@color/nav_background_color</item>
    </style>

    <!-- Add Quest Button Style -->
    <style name="AddQuest">
        <item name="android:backgroundTint">@color/purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:radius">24dp</item>
    </style>

    <!-- Dialog Theme -->
    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:dialogCornerRadius">16dp</item> <!-- Ignore warnings -->
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/gray</item>

    </style>


</resources>
