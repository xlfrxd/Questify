<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9E8E8">

    <!-- Sign Up Text -->
    <TextView
        android:id="@+id/signUpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/actor_regular"
        android:text="Sign Up"
        android:textColor="@color/purple"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Full Name Input Field -->
    <EditText
        android:id="@+id/fullNameEditText"
        android:layout_width="354dp"
        android:layout_height="62dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_field_background"
        android:backgroundTint="#EDEDED"
        android:elevation="4dp"
        android:fontFamily="@font/actor_regular"
        android:hint="Full Name"
        android:padding="10dp"
        android:textColor="#5B5F97"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signUpText" />

    <!-- Username Input Field -->
    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="354dp"
        android:layout_height="62dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_field_background"
        android:backgroundTint="#EDEDED"
        android:elevation="4dp"
        android:fontFamily="@font/actor_regular"
        android:hint="Username"
        android:padding="10dp"
        android:textColor="#5B5F97"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fullNameEditText" />

    <!-- Email Input Field -->
    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="354dp"
        android:layout_height="62dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_field_background"
        android:backgroundTint="#EDEDED"
        android:elevation="4dp"
        android:fontFamily="@font/actor_regular"
        android:hint="Email"
        android:padding="10dp"
        android:textColor="#5B5F97"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/usernameEditText" />

    <!-- Password Input Field -->
    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="354dp"
        android:layout_height="62dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_field_background"
        android:backgroundTint="#EDEDED"
        android:elevation="4dp"
        android:fontFamily="@font/actor_regular"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#5B5F97"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailEditText" />

    <!-- Create Account Button -->
    <Button
        android:id="@+id/createAccountButton"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/actor_regular"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:text="Create Account"
        android:textColor="#5B5F97"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passwordEditText" />

    <!-- Custom Sign Up with Google Button -->
    <LinearLayout
        android:id="@+id/signUpGoogleButton"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button_background"
        android:elevation="4dp"
        android:fontFamily="@font/actor_regular"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/createAccountButton"
        android:padding="10dp">

        <TextView
            android:id="@+id/signUpGoogleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up with Google"
            android:textColor="#5B5F97"
            android:textSize="16sp"
            android:fontFamily="@font/actor_regular" />

        <ImageView
            android:id="@+id/googleIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/google" />
    </LinearLayout>

    <!-- Have an account? Sign In Text Container -->
    <LinearLayout
        android:id="@+id/haveAccountContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/signUpGoogleButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/haveAccountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/actor_regular"
            android:text="Have an account?"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/signInLinkText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/actor_regular"
            android:text=" Sign In"
            android:textStyle="bold"
            android:textColor="@color/purple"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
