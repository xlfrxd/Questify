<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="bottomNavigationStyle">@style/CustomBottomNavigationStyle</item>
    </style>

    <!-- Custom BottomNavigationView style -->
    <style name="CustomBottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">32dp</item> <!-- Adjust the icon size as needed -->
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconTint">@color/nav_item_color</item>
        <item name="backgroundTint">@color/nav_background_color</item>
    </style>

    <!-- Custom Button Style 1 -->
    <style name="CustomButtonStyle1" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_home_1</item>
        <item name="backgroundTint">@color/gray</item>
        <item name="android:textColor">@color/white</item> <!-- Adjust the text color if needed -->
    </style>

    <!-- Custom Button Style 2 -->
    <style name="CustomButtonStyle2" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_home_1</item>
        <item name="backgroundTint">@color/purple</item>
        <item name="android:textColor">@color/white</item> <!-- Adjust the text color if needed -->
    </style>
</resources>
